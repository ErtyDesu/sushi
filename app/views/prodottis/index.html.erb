<p id="notice"><%= notice %></p>

<h1>Prodottis</h1>

<table class=table>
  <thead>
    <tr>
      <th>Codice</th>
      <th>Nome</th>
      <th>Numeropezzi</th>
      <th>Ingredienti</th>
      <th>Prezzo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prodottis.each do |prodotti| %>
      <tr>
        <td>
          <% if prodottis.cover.attached? %>
          <%= image_tag url_for(prodottis.cover) ,:class => "w-50"%>
          <% end %>
        </td>
        <td><%= prodotti.codice %></td>
        <td><%= prodotti.nome %></td>
        <td><%= prodotti.numeropezzi %></td>
        <td><%= prodotti.ingredienti %></td>
        <td><%= prodotti.prezzo %></td>
        <td><a><button type="button" class="btn btn-primary"><%= link_to 'Edit', edit_prodotti_path(prodotti) %></button></a></td>
        <td><a><button type="button" class="btn btn-danger"><%= link_to 'Destroy', prodotti, method: :delete, data: { confirm: 'sei sicuro?' } %></button></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="prodottis/new"><button type="button" class="btn btn-primary">Nuovo Prodotto</button></a>

